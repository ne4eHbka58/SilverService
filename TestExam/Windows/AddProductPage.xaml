<Page x:Class="TestExam.Windows.AddProductPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TestExam.Windows"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="800"
      Title="AddProductPage">

    <Grid VerticalAlignment="Top" Margin="0,100,0,0" HorizontalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- Артикул -->
        <TextBlock Grid.Row="0" Grid.Column="0" 
        Text="Артикул товара:" 
        FontSize="20"
        VerticalAlignment="Center"
        Margin="0,0,10,20"
        />

        <TextBox Grid.Row="0" Grid.Column="1" 
        Width="300" Height="40" 
        FontSize="20"
        VerticalContentAlignment="Center"
        Margin="0,0,0,20"
        x:Name="ArticleBox"
        Text="{Binding ProductArticleNumber}"/>

        <!-- Название товара -->
        <TextBlock Grid.Row="1" Grid.Column="0" 
        Text="Название товара:" 
        FontSize="20"
        VerticalAlignment="Center"
        Margin="0,0,10,20"
        />

        <TextBox Grid.Row="1" Grid.Column="1" 
        Width="300" Height="40" 
        FontSize="20"
        VerticalContentAlignment="Center"
        Margin="0,0,0,20"
        x:Name="ProductNameBox"
        Text="{Binding ProductName}"/>

        <!-- Описание товара -->
        <TextBlock Grid.Row="2" Grid.Column="0" 
        Text="Описание товара:" 
        FontSize="20"
        VerticalAlignment="Center"
        Margin="0,0,10,20"
        />

        <TextBox Grid.Row="2" Grid.Column="1" 
        Width="300" Height="40" 
        FontSize="20"
        VerticalContentAlignment="Center"
        Margin="0,0,0,20"
        x:Name="DescriptionBox"
        Text="{Binding ProductDescription}"/>

        <!-- Категория товара -->
        <TextBlock Grid.Row="3" Grid.Column="0" 
       Text="Категория товара:" 
       FontSize="20"
       VerticalAlignment="Center"
       Margin="0,0,10,20"
       />

        <ComboBox Grid.Row="3" Grid.Column="1" Width="300" Height="40" 
                  FontSize="20"
                  VerticalContentAlignment="Center"
                  Margin="0,0,0,20"
                  x:Name="cbCategory" DisplayMemberPath="Category1"
                  SelectedItem="{Binding Category}"
                  />

        <!-- Цена товара -->
        <TextBlock Grid.Row="4" Grid.Column="0" 
       Text="Цена товара:" 
       FontSize="20"
       VerticalAlignment="Center"
       Margin="0,0,10,20"/>

        <TextBox Grid.Row="4" Grid.Column="1" 
       Width="300" Height="40"
       FontSize="20"
       VerticalContentAlignment="Center"
       x:Name="CostBox"
       PreviewTextInput="number_input"
       Margin="0,0,0,20"
       Text="{Binding ProductCost}"/>

        <!-- Количество на складе -->
        <TextBlock Grid.Row="5" Grid.Column="0" 
        Text="Количество на складе:" 
        FontSize="20"
        VerticalAlignment="Center"
        Margin="0,0,10,0"/>

        <TextBox Grid.Row="5" Grid.Column="1" 
        Width="300" Height="40"
        FontSize="20"
        VerticalContentAlignment="Center"
        x:Name="CountBox"
        PreviewTextInput="intNumber_input"
        Margin="0,0,0,20"
        Text="{Binding ProductQuantityInStock}"/>

        <!-- Статус товара -->
        <TextBlock Grid.Row="6" Grid.Column="0" 
       Text="Статус товара:" 
       FontSize="20"
       VerticalAlignment="Center"
       Margin="0,0,10,0"/>

        <TextBox Grid.Row="6" Grid.Column="1" 
       Width="300" Height="40"
       FontSize="20"
       VerticalContentAlignment="Center"
       x:Name="StatusBox"
       Text="{Binding ProductStatus}"/>

        <!-- Кнопка -->
        <Button Grid.Row="7" Grid.ColumnSpan="2" 
    Content="Сохранить товар" 
    FontSize="18"
    Width="180" 
    Height="40"
    Margin="0,25,0,0" 
    HorizontalAlignment="Center"
    VerticalContentAlignment="Center"
    IsDefault="True"
    Click="CreateProduct"/>

        <!-- Возврат к каталогу -->
        <TextBlock Grid.Row="8" Grid.ColumnSpan="2"
    Text="Вернуться к каталогу"
    Foreground="DarkSlateGray"
    Cursor="Hand"
    FontSize="14"
    Margin="0,10,0,0"
    HorizontalAlignment="Center"
    MouseDown="GoToCatalog"/>
    </Grid>
</Page>
