<Page x:Class="TestExam.Windows.RegistrationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TestExam.Windows"
      mc:Ignorable="d" 
      d:DesignHeight="550" d:DesignWidth="800"
      Title="RegistrationPage">

    <Grid VerticalAlignment="Top" Margin="0,100,0,0" HorizontalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- Фамилия -->
        <TextBlock Grid.Row="0" Grid.Column="0" 
            Text="Фамилия:" 
            FontSize="20"
            VerticalAlignment="Center"
            Margin="0,0,10,20"
            />

        <TextBox Grid.Row="0" Grid.Column="1" 
            Width="300" Height="40" 
            FontSize="20"
            VerticalContentAlignment="Center"
            Margin="0,0,0,20"
            x:Name="SurnameBox"/>

        <!-- Имя -->
        <TextBlock Grid.Row="1" Grid.Column="0" 
            Text="Имя:" 
            FontSize="20"
            VerticalAlignment="Center"
            Margin="0,0,10,20"
            />

        <TextBox Grid.Row="1" Grid.Column="1" 
            Width="300" Height="40" 
            FontSize="20"
            VerticalContentAlignment="Center"
            Margin="0,0,0,20"
            x:Name="NameBox"/>

        <!-- Отчество -->
        <TextBlock Grid.Row="2" Grid.Column="0" 
            Text="Отчество:" 
            FontSize="20"
            VerticalAlignment="Center"
            Margin="0,0,10,20"
            />

        <TextBox Grid.Row="2" Grid.Column="1" 
            Width="300" Height="40" 
            FontSize="20"
            VerticalContentAlignment="Center"
            Margin="0,0,0,20"
            x:Name="PatrynomicBox"/>

        <!-- Логин -->
        <TextBlock Grid.Row="3" Grid.Column="0" 
           Text="Логин:" 
           FontSize="20"
           VerticalAlignment="Center"
           Margin="0,0,10,20"
           />

        <TextBox Grid.Row="3" Grid.Column="1" 
         Width="300" Height="40" 
         FontSize="20"
         VerticalContentAlignment="Center"
         Margin="0,0,0,20"
         x:Name="LoginBox"/>

        <!-- Пароль -->
        <TextBlock Grid.Row="4" Grid.Column="0" 
           Text="Пароль:" 
           FontSize="20"
           VerticalAlignment="Center"
           Margin="0,0,10,20"/>

        <PasswordBox Grid.Row="4" Grid.Column="1" 
           Width="300" Height="40"
           FontSize="20"
           VerticalContentAlignment="Center"
           x:Name="PasswordBox"
           Margin="0,0,0,20"/>

        <!-- Повторить пароль -->
        <TextBlock Grid.Row="5" Grid.Column="0" 
           Text="Повторите пароль:" 
           FontSize="20"
           VerticalAlignment="Center"
           Margin="0,0,10,0"/>

        <PasswordBox Grid.Row="5" Grid.Column="1" 
           Width="300" Height="40"
           FontSize="20"
           VerticalContentAlignment="Center"
           x:Name="SecPasswordBox"/>

        <!-- Переход в регистрацию -->
        <TextBlock Grid.Row="6" Grid.ColumnSpan="2"
        Text="Уже есть аккаунт? Войти!"
        Foreground="Blue"
        Cursor="Hand"
        FontSize="14"
        Margin="0,10,0,0"
        HorizontalAlignment="Center"
        MouseDown="GoToSignIn"/>

        <!-- Кнопка -->
        <Button Grid.Row="7" Grid.ColumnSpan="2" 
        Content="Зарегистрироваться" 
        FontSize="18"
        Width="180" 
        Height="40"
        Margin="0,15,0,0" 
        HorizontalAlignment="Center"
        VerticalContentAlignment="Center"
        IsDefault="True"
        Click="Registrate"/>
    </Grid>
</Page>
